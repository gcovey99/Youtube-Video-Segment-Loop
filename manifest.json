{
  "manifest_version": 3,
  "name": "Youtube Segment Loop",
  "version": "1.0",
  "description": "Loop a segment of a YouTube video between selected start and end times.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Youtube Segment Loop",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ]
}
